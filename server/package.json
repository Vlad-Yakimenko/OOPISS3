{
  "name": "oop_labwork",
  "version": "1.0.0",
  "description": "Telephone Exchange",
  "main": "main.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "npm run prebuild && npm i && tsc && tscpaths -p tsconfig.build.json -s ./src -o ./dist",
    "start": "npm run build && node dist/main.js",
    "start:dev": "tsnd --respawn --quiet -r tsconfig-paths/register ./src/main.ts",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "test": "jest --config ./jest.config.json",
    "test:dev": "npm run test -- --silent=false --verbose --coverage=false",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest  --config ./jest.config.json --coverage=false --runInBand",
    "test:watch": "npm run test:dev -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vlad-Yakimenko/OOPISS3.git"
  },
  "author": "Maksym Kovalchuk",
  "license": "ISC",
  "homepage": "https://github.com/Vlad-Yakimenko/OOPISS3#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "mysql2": "^2.2.5",
    "tscpaths": "0.0.9",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/faker": "^5.1.6",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.27",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "faker": "^5.5.1",
    "jest": "^26.6.3",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 0
      }
    },
    "roots": [
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {}
  }
}
